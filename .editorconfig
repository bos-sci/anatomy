# Editor configuration, see https://editorconfig.org
root = true

[*]
# These affect Prettier's configuration.
end_of_line = lf
indent_style = space
indent_size = 2
max_line_length = 120

# These have no effect on Prettier
trim_trailing_whitespace = true
charset = utf-8
insert_final_newline = false

[*.md]
max_line_length = off
trim_trailing_whitespace = false
