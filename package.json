{
  "name": "@boston-scientific/monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "A monorepo containing all the design system projects at Boston Scientific",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "packages": "packages"
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0"
  },
  "scripts": {
    "start:docs": "npm start --workspace=docs",
    "build:docs": "npm run build --workspace=docs",
    "build:tokens": "npm run build --workspace=packages/anatomy-tokens",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,html,css,scss}": "npm run format:write --workspaces --if-present",
    "*.{js,jsx,ts,tsx}": "npm run fix:scripts --workspaces --if-present",
    "*.{css,scss}": "npm run fix:styles --workspaces --if-present"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bos-sci/anatomy.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bos-sci/anatomy/issues"
  },
  "homepage": "https://github.com/bos-sci/anatomy#readme"
}
